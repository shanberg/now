{
  "imports": {
    "std/": "https://deno.land/std@0.189.0/",
    "src/": "./src/"
  },
  "tasks": {
    "dev": "deno run --allow-read --allow-write --watch src/index.ts tui",
    "cli": "deno run --allow-read --allow-write --watch src/index.ts",
    "lint": "deno lint",
    "lint:watch": "deno lint --watch",
    "fmt": "deno fmt",
    "fmt:watch": "deno fmt --watch",
    "test": "deno test --allow-read --allow-write tests/",
    "test:watch": "deno test --watch --allow-read --allow-write tests/",
    "bundle": "deno bundle src/index.ts dist/bundle.js",
    "compile": "deno compile --allow-read --allow-write src/index.ts"
  }
}
